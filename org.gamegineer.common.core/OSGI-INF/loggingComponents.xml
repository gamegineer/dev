<?xml version="1.0" encoding="UTF-8"?>
<root>
	<scr:component
			name="org.gamegineer.common.core.services.logging.defaultFormatterFactory"
			xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0">
		<implementation
				class="org.gamegineer.common.internal.core.services.logging.DefaultFormatterFactory" />
		<service>
			<provide
					interface="org.osgi.service.component.ComponentFactory" />
		</service>
		<property
				name="component.factory"
				type="String"
				value="java.util.logging.Formatter" />
	</scr:component>
	<scr:component
			name="org.gamegineer.common.core.services.logging.defaultHandlerFactory"
			xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0">
		<implementation
				class="org.gamegineer.common.internal.core.services.logging.DefaultHandlerFactory" />
		<service>
			<provide
					interface="org.osgi.service.component.ComponentFactory" />
		</service>
		<property
				name="component.factory"
				type="String"
				value="java.util.logging.Handler" />
	</scr:component>
	<scr:component
			name="org.gamegineer.common.core.services.logging.frameworkLogHandlerFactory"
			xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0">
		<implementation
				class="org.gamegineer.common.internal.core.services.logging.FrameworkLogHandlerFactory" />
		<reference
				bind="bindFrameworkLog"
				cardinality="1..1"
				interface="org.eclipse.osgi.framework.log.FrameworkLog"
				name="frameworkLog"
				policy="static"
				unbind="unbindFrameworkLog" />
		<service>
			<provide
					interface="org.osgi.service.component.ComponentFactory" />
		</service>
		<property
				name="component.factory"
				type="String"
				value="org.gamegineer.common.core.util.logging.FrameworkLogHandler" />
	</scr:component>
</root>
