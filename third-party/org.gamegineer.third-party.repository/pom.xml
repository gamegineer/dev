<?xml version="1.0" encoding="UTF-8"?>
<project
		xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
		xmlns="http://maven.apache.org/POM/4.0.0"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.gamegineer</groupId>
		<artifactId>org.gamegineer.third-party</artifactId>
		<version>0.17.0-SNAPSHOT</version>
		<relativePath>../org.gamegineer.third-party</relativePath>
	</parent>

	<artifactId>org.gamegineer.third-party.repository</artifactId>
	<packaging>eclipse-repository</packaging>

	<name>org.gamegineer.third-party Repository</name>
	<description>
		This project packages all Gamegineer third-party bundles in a p2 repository that can be accessed by other projects during the build.
	</description>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-deploy-plugin</artifactId>
				<configuration>
					<skip>false</skip>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
